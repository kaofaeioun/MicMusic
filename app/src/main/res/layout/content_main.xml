<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main"
    tools:context=".MainActivity .BattleActivity"
    android:background="@color/background"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/main_channel_1"
        android:src="@drawable/main_channel"
        android:layout_gravity="center"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:id="@+id/main_channel_2"
        android:src="@drawable/main_channel"
        android:layout_gravity="center"
        android:layout_below="@+id/main_channel_1"
        android:layout_alignStart="@+id/main_channel_1" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/main_channel_3"
        android:src="@drawable/main_channel"
        android:layout_gravity="center"
        android:layout_below="@+id/main_channel_2"
        android:layout_alignStart="@+id/main_channel_2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="推薦頻道"
        android:textColor="#ffffff"
        android:id="@+id/textView"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/main_channel_1" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="人氣視頻"
        android:textColor="#ffffff"
        android:id="@+id/textView2"
        android:layout_above="@+id/main_channel_3"
        android:layout_alignStart="@+id/main_channel_2" />
</RelativeLayout>
