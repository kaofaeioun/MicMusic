<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_person"
    tools:context=".PersonActivity"
    android:background="@color/background"
    >

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/channel_1"
        android:src="@drawable/person_channel_1"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="190dp"
        android:id="@+id/channel_2"
        android:src="@drawable/person_channel_2"
        android:layout_gravity="center"
        android:layout_below="@+id/channel_1"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/channel_3"
        android:src="@drawable/person_channel_3"
        android:layout_gravity="center"
        android:layout_below="@+id/channel_2"
        android:layout_alignStart="@+id/channel_2" />
</RelativeLayout>
